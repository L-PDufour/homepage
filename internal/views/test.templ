package views

import (
	"strconv"
	"homepage/internal/models"
)

templ Test(data models.HomePageData) {
	@Base() {
		<div class="container mx-auto px-4">
			<h1 class="text-3xl font-bold mb-4">Welcome to My Homepage</h1>
			<section class="mb-8">
				<h2 class="text-2xl font-semibold mb-2">Recent Blog Posts</h2>
				<ul>
					for _, post := range data.BlogPosts {
						<li class="mb-2">
							<a href={ templ.SafeURL("/blog?id=" + strconv.Itoa(post.ID)) } class="text-blue-600 hover:underline">
								{ post.Title }
							</a>
						</li>
					}
				</ul>
			</section>
			// Add other sections of your homepage as needed
		</div>
	}
}
